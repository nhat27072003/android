<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation">
    <!-- Danh sách sinh viên -->
    <fragment
        android:id="@+id/studentListFragment"
        android:name="com.example.studentmanagerfragment.StudentList"
        android:label="Danh sách sinh viên">
        <action
            android:id="@+id/action_studentList_to_addStudent"
            app:destination="@id/addStudentFragment" />
        <action
            android:id="@+id/action_studentList_to_editStudent"
            app:destination="@id/editStudentFragment" />
    </fragment>

    <!-- Thêm mới sinh viên -->
    <fragment
        android:id="@+id/addStudentFragment"
        android:name="com.example.studentmanagerfragment.AddStudent"
        android:label="Thêm sinh viên" />

    <!-- Chỉnh sửa sinh viên -->
    <fragment
        android:id="@+id/editStudentFragment"
        android:name="com.example.studentmanagerfragment.EditStudent"
        android:label="Chỉnh sửa sinh viên" />

</navigation>